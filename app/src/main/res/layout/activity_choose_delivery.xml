<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_delivery_context"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.ClientMainActivity" />

        <LinearLayout
            android:id="@+id/order_layout"
            android:layout_width="wrap_content"
            android:layout_height="589dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dummy"
                android:layout_width="417dp"
                android:layout_height="443dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="326dp"
                android:layout_height="144dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/delivery_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/image_layout"
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/delivery_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/choose_delivery_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/dummy_confirm"
                        android:layout_width="259dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />

                    <Button
                        android:id="@+id/confirm_delivery_button"
                        style="@style/button"
                        android:layout_width="0dp"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="@string/choose_delivery" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>