<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/context_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linear_gradient"
        android:isScrollContainer="true"
        android:theme="@style/AppTheme"
        app:layout_constraintVertical_chainStyle="packed"
        tools:context=".ui.RegisterActivity">

        <include
            android:id="@+id/include3"
            layout="@layout/icon"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="295dp"
            android:layout_height="401dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include3">

            <LinearLayout
                android:id="@+id/delivery_what_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/delivery_what_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/delivery_what" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/delivery_place_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/delivery_place_input"
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:hint="@string/delivery_place" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/search_place_button"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@android:drawable/ic_menu_search" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/delivery_by_who_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/delivery_by_who_input"
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:hint="@string/delivery_by_who" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/search_delivery_button"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@android:drawable/ic_menu_search" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/order_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/generate_order_btn" />
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/order_loading_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:elevation="10dp"
            android:indeterminate="true"
            android:scrollbarSize="4dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>