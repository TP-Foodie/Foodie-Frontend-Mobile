<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/linear_gradient"
                                                   android:isScrollContainer="true"
                                                   android:theme="@style/AppTheme"
                                                   app:layout_constraintVertical_chainStyle="packed"
                                                   tools:context=".ui.RegisterActivity">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="328dp"
            android:layout_height="112dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp" android:layout_marginBottom="486dp"
            app:layout_constraintBottom_toTopOf="@+id/register_submit_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="273dp"
            android:layout_height="310dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/register_submit_btn" android:id="@+id/linearLayout">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_field_layout" android:layout_marginBottom="10dp"
                app:errorTextAppearance="@style/error_appearance" app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/email_field"
                    android:hint="@string/email_field"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_field_layout" android:layout_marginBottom="10dp"
                app:errorTextAppearance="@style/error_appearance" app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/password_field"
                    android:hint="@string/password_field"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_confirm_layout" android:layout_marginBottom="10dp"
                app:errorTextAppearance="@style/error_appearance" app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/password_confirmation_field"
                    android:hint="@string/password_confirm_field"/>


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <Button
            android:id="@+id/register_submit_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/raleway"
            android:text="@string/confim_register_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="90dp" app:layout_constraintHorizontal_bias="0.496"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:id="@+id/loading_bar"
            android:indeterminate="true" app:layout_constraintStart_toStartOf="@+id/register_submit_btn"
            app:layout_constraintEnd_toEndOf="@+id/register_submit_btn"
            app:layout_constraintTop_toTopOf="@+id/register_submit_btn"
            app:layout_constraintBottom_toBottomOf="@+id/register_submit_btn" android:visibility="invisible"
            android:elevation="10dp" android:scrollbarSize="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>